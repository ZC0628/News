<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:paddingTop="5dp" 
    android:paddingBottom="5dp">
    
    <RelativeLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/comment_item_iv" 
            android:layout_width="30dp" 
            android:layout_height="30dp" 
            android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"/>
        
        <TextView 
            android:id="@+id/comment_item_tv1" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true" 
            android:layout_marginLeft="22dp" 
            android:layout_toRightOf="@id/comment_item_iv" 
            android:text="北京手机网友" 
            android:textSize="16sp" 
            android:textColor="@color/blue"/>
        
        <TextView 
            android:id="@+id/comment_item_tv2" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true" 
            android:layout_marginRight="5dp"
            android:text="2014-04-08"/>
        
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/comment_item_tv3" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:text="这里是评论内容" 
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
