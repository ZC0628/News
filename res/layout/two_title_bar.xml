<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/title_bar_bg">
    
    <ImageButton
        android:id="@+id/title_bar_ib1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@drawable/title_left" />
    
     <TextView 
        android:id="@+id/comment_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/title_bar_ib1"
        android:clickable="true"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新闻"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:textSize="23sp" />
    
    <TextView 
        android:id="@+id/comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跟帖"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/title_bar_ib2"
        android:clickable="true"
        android:layout_marginRight="10dp"/>

    <ImageButton
        android:id="@+id/title_bar_ib2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/fragment_read" />

</RelativeLayout>
