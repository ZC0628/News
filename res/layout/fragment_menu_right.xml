<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/center_top_bg">
    

        <RelativeLayout 
        android:id="@+id/rl_unlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:visibility="visible">
        
        <ImageView 
            android:id="@+id/unlogin_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"
            android:clickable="true"
            android:onClick="doClick"/>
        
        <TextView 
            android:id="@+id/unlogin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立刻登录"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/unlogin_iv"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:onClick="doClick"/>
 </RelativeLayout>
 
       

        <TextView 
            android:id="@+id/update_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本更新"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:clickable="true"
            android:onClick="doClick"/>
    
    
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        
        <ImageView 
            android:id="@+id/fun_weixin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/weixin"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:onClick="doClick"/>
        
        <ImageView 
            android:id="@+id/fun_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/qq"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:onClick="doClick"/>
        
        <ImageView 
            android:id="@+id/fun_friends"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/friends"
            android:clickable="true"
            android:layout_marginRight="15dp"
            android:onClick="doClick"/>
        
        <ImageView 
            android:id="@+id/fun_weibo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/weibo"
            android:clickable="true"
            android:onClick="doClick"/>
        
    </LinearLayout>
    
    
    

</RelativeLayout>
